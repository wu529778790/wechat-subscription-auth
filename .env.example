# 网站地址（必须，微信回调用）
SITE_URL=https://your-site.com

# 微信后台配置（必须）
WECHAT_TOKEN=your-wechat-token

# 公众号名称（必须，前端显示）
WECHAT_NAME=我的公众号

# 公众号二维码URL（可选，留空显示默认占位图）
WECHAT_QRCODE_URL=

# Session密钥（必须，生产环境用随机字符串）
# 生成命令：openssl rand -hex 32
SESSION_SECRET=dev-secret-change-in-production

# 以下仅认证服务号需要（个人订阅号留空）
WECHAT_APPID=
WECHAT_APPSECRET=

# 存储类型（可选，默认JSON，可选：sqlite）
# STORAGE_TYPE=sqlite

# 验证码有效期（可选，默认300秒）
# CODE_EXPIRY=300

# 关键词配置（可选，JSON数组格式）
# 认证关键词 - 触发发送验证码
# KEYWORDS_AUTH=["已关注", "认证", "验证", "login", "已订阅", "关注了", "验证码", "1"]
# 状态查询关键词
# KEYWORDS_STATUS=["状态", "status", "查询"]
# 帮助关键词
# KEYWORDS_HELP=["帮助", "help", "怎么", "如何"]
